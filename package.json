{
  "name": "convertatxt",
  "productName": "ConvertaTXT",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "tsc && vite build && electron-builder",
    "electron:package": "electron-builder --win --mac",
    "start": "npm run dev & npm run electron:dev"
  },
  "dependencies": {
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "jszip": "^3.10.1",
    "lucide-react": "^0.344.0",
    "mammoth": "^1.9.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.8.69",
    "pptxgenjs": "^3.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/jszip": "^3.4.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/tesseract.js": "^0.0.2",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.18",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.1.0"
  },
  "build": {
    "appId": "com.convertatxt.app",
    "productName": "ConvertaTXT",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electron/icons/icon.icns",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ConvertaTXT",
      "installerIcon": "electron/icons/icon.ico",
      "uninstallerIcon": "electron/icons/icon.ico",
      "installerHeaderIcon": "electron/icons/icon.ico",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": true,
      "language": "1046",
      "include": "electron/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
